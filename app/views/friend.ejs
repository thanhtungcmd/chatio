    <title>Homepage - tabler.github.io - a responsive, flat and full featured admin template</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300i,400,400i,500,500i,600,600i,700,700i&amp;subset=latin-ext">
    <!-- Dashboard Core -->
    <link href="./assets/css/dashboard.css" rel="stylesheet" />
  </head>
  <body>
    <div class="page">
      <div class="page-main">
        <div class="my-3 my-md-5">
          
          <div class="container">
            <div class="row row-cards row-deck">
              
              <div class="offset-md-4 col-md-4">
                <!-- <div class="form-group">
                  <div class="input-group">
                    <input type="text" id="room-title" class="form-control" placeholder="New room">
                    <span class="input-group-append">
                      <button class="btn btn-default" id="create-room" type="button">Create</button>
                    </span>
                  </div>
                </div> -->
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Friends</h4>
                  </div>
                  <table class="table card-table table-hover">
                    <tbody>
                      <% friends.forEach(function(friend) { %>
                      <tr>
                        <td>
                          <a href="/chat?friend=<%= friend.username %>"><%= friend.username %></a>
                          <span 
                            id="<%= friend.username %>" 
                            <% if (!friend.status_chat) { %> style="display: none" <% } %>
                            >(online)</span>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>\
    <script src="/socket.io/socket.io.js"></script>
    <script src='/javascripts/main.js'></script>
    <script>
      $(function () {
        app.room('<%= user.username %>');
      });
    </script>
  </body>
</html>